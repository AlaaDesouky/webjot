{{#each ideas}}
<div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <span class="float-right">Created at: {{formatDate date "MMMM Do YYYY"}}</span>
    <hr>
    <p>{{details}}</p>
    <a href="ideas/edit/{{id}}" class="btn btn-dark btn-block mb-2">Edit</a>
    <form method="POST" action="/ideas/{{id}}?_method=DELETE">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn btn-danger btn-block" value="Delete">
    </form>
</div>
{{else}}
<p>There are no ideas to show</p>
{{/each}}